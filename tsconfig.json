{
  "include": [
    ".eslintrc.cjs",
    "./src/**/*.ts",
    "./test/**/*.ts",
    "index.ts"
  ],
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "*": ["*"]
    },
    "useDefineForClassFields": true,
    "lib": [
      "DOM", 
      "ES2021"
    ],
    "target": "ES2021",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, 
    "strict": true,
    "skipLibCheck": true,
    "strictFunctionTypes": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true
  }
}